rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to bundles
    match /bundles/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
